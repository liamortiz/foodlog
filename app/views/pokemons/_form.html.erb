<%= form_with model: @pokemon do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :id %>
    <%= f.text_field :pokemon_id %>

    <%= f.label "Primary Type" %>
    <%= f.text_field :type1 %>

    <%= f.label "Secondary Type" %>
    <%= f.text_field :type2 %>

    <%= f.label "Trainer ID" %>
    <%= f.select :trainer_id, @trainers.all.map{|trainer| trainer.id} %>

    <%= f.submit %>
<% end %>